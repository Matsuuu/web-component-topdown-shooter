{
  "scripts": {
    "lint": "eslint '*/**/*.ts' --fix",
    "prettify": "prettier --write '*/**/*.ts'",
    "clean": "npm run lint && npm run prettify",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start": "es-dev-server --file-extensions .ts --node-resolve --babel --app-index index.html --watch"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-typescript": "^7.10.4",
    "@open-wc/building-rollup": "^1.4.2",
    "@open-wc/eslint-config": "^2.0.6",
    "@open-wc/prettier-config": "^0.1.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "es-dev-server": "^1.56.1",
    "eslint": "^6.8.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^2.22.1",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "web-component-topdown-shooter",
  "version": "0.0.0",
  "description": "Webcomponent web-component-topdown-shooter following open-wc recommendations",
  "author": "web-component-topdown-shooter",
  "license": "MIT",
  "dependencies": {
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "stats-js": "^1.0.1"
  }
}
